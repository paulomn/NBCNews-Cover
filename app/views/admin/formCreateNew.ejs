<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>NBC News Portal Cover</title>
		
		<!-- JQuery -->
		<script src="/js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="/css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="/images/favicon.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="/images/logo.png" />
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="index.html">HOME</a></li>
					</ul>
				</div>
			</div>
		</nav>


	    <div class="container">
		
			<% if (validationForm.length > 0) { %>
			<div class="row">
				<div class="col-md-12">
					<div class="alert alert-danger">
						<strong>Warning</strong>
						<ul>
							<% for(var i = 0; i < validationForm.length; i++) { %> 
							<li><%= validationForm[i].msg%></li>
							<% } %>
						</ul>
					</div>
				</div>
			</div>
			<% } %>

	    	<div class="row">
	    		<div class="col-md-12">
	    			<form action="/admin/createnew_submit" method="post">
						<div class="form-group">
							<label for="subject">Subject:</label>
							<input type="text" class="form-control" id="subject" name="subject" value="<%= news.subject %>">
						</div>

						<div class="form-group">
							<label for="summary">Summary:</label>
							<input type="text" class="form-control" id="summary" name="summary" value="<%= news.summary %>">
						</div>
						
						<div class="form-group">
							<label for="authorName">Author:</label>
							<input type="text" class="form-control" id="authorName" name="authorName" value="<%= news.authorName %>">
						</div>

						<div class="form-group">
							<label for="newDate">Date:</label>
							<input type="date" class="form-control" id="newDate" name="newDate" value="<%= news.newDate %>">
						</div>

						<div class="form-group">
							<label for="description">Description:</label>
							<textarea class="form-control" id="description" name="description"><%= news.description %></textarea>
						</div>


						<button type="submit" class="btn btn-default">Save</button>
						</form>
		    	</div>
	    	</div>
	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>